<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#267093">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TECHDITO"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold" />

        <ImageView
            android:id="@+id/sidebarIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_menu" />
    </RelativeLayout>

    <!-- TÃ­tulo de la pantalla -->
    <TextView
        android:id="@+id/lecturasTitle"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:text="Lecturas"
        android:fontFamily="@font/poppins_bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/rounded_rectangle" />

    <!-- ListView de Lecturas -->
    <ListView
        android:id="@+id/lecturasListView"
        android:layout_width="800dp"
        android:layout_height="match_parent"
        android:layout_below="@id/lecturasTitle"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:fontFamily="@font/poppins_bold"/>



</RelativeLayout>

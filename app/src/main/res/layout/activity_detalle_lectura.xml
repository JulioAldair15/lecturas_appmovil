<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF">

    <!-- Rectángulo superior -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#267093">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TECHDITO"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold" />

        <ImageView
            android:id="@+id/sidebarIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_menu" />
    </RelativeLayout>

    <!-- Contenedor principal -->
    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_margin="16dp"
        android:padding="16dp"

        android:elevation="2dp"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/rounded_border">

        <!-- Información en la parte superior -->
        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suministro: \nCliente: \nN° de Medidor: \nDirección:"
            android:fontFamily="@font/poppins_semibold"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="14sp" />

        <!-- Lectura y Foto -->
        <RelativeLayout
            android:id="@+id/lecturaFotoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoTextView"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/lecturaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lectura:"
                android:fontFamily="@font/poppins_bold"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/lecturaInput"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_below="@id/lecturaLabel"
                android:background="@drawable/rounded_background_lec"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:elevation="2dp"
                android:hint="Ingrese lectura"
                android:textSize="12sp"
                android:padding="6dp" />

            <TextView
                android:id="@+id/fotoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lecturaInput"
                android:layout_alignTop="@id/lecturaLabel"
                android:text="Foto:"
                android:fontFamily="@font/poppins_bold" />

            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:layout_toEndOf="@id/fotoLabel"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_camera"
                android:background="@drawable/rounded_background_cam"
                android:layout_marginTop="8dp"
                android:elevation="2dp" />
        </RelativeLayout>

        <!-- Vista previa de fotos -->
        <LinearLayout
            android:id="@+id/photoPreviewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lecturaFotoContainer"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <!-- Cuadro de foto con ícono X - Foto 1 -->
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_background_foto"
                android:layout_marginEnd="8dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/photoPreview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_photo_placeholder" />

                <ImageView
                    android:id="@+id/deleteIcon1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_delete"
                    android:backgroundTint="#FF0000" />
            </RelativeLayout>

            <!-- Cuadro de foto con ícono X - Foto 2 -->
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_background_foto"
                android:layout_marginEnd="8dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/photoPreview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_photo_placeholder" />

                <ImageView
                    android:id="@+id/deleteIcon2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_delete"
                    android:backgroundTint="#FF0000" />
            </RelativeLayout>

            <!-- Cuadro de foto con ícono X - Foto 3 -->
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_background_foto"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/photoPreview3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_photo_placeholder" />

                <ImageView
                    android:id="@+id/deleteIcon3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_delete"
                    android:backgroundTint="#FF0000" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Observaciones -->
        <LinearLayout
            android:id="@+id/observationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photoPreviewContainer"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Observación 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observación 1:"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="2dp" />

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_background_foto"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/observationText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="Seleccionar observación" />

                <ImageView
                    android:id="@+id/arrowDown1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_down" />
            </RelativeLayout>

            <!-- Observación 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observación 2:"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="2dp" />

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_background_foto"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/observationText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="Seleccionar observación" />

                <ImageView
                    android:id="@+id/arrowDown2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_down" />
            </RelativeLayout>

            <!-- Observación 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observación 3:"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="2dp" />

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_background_foto"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/observationText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="Seleccionar observación" />

                <ImageView
                    android:id="@+id/arrowDown3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_down" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/detallesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/observationContainer"
            android:layout_marginTop="8dp"
            android:text="Detalles:"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/detallesInput"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_below="@id/detallesLabel"
            android:background="@drawable/rounded_background_foto"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:hint="Ingrese detalles"
            android:padding="8dp"
            android:textColorHint="#656565"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:scrollbars="vertical" />

        <!-- Botones inferiores -->
        <LinearLayout
            android:id="@+id/bottomButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/prevButton"
                android:layout_width="58dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#8F8F8F"
                android:src="@drawable/ic_arrow_left"
                android:background="@drawable/rounded_background_foto" />

            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="58dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#8F8F8F"
                android:src="@drawable/ic_arrow_right"
                android:background="@drawable/rounded_background_foto" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_marginStart="96dp"
                android:text="Enviar"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
